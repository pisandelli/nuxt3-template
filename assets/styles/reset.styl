@require 'defaults'
@require './utilities/*.styl'
@require './themes/dark.styl'

*,
*::before, 
*::after
  box-sizing: border-box

*
  margin: 0
  padding: 0
  font: inherit

html
  color-scheme: light dark

body
  min-height: 100vh
  text-rendering: optimizeSpeed

a[href]:not([class])
  text-decoration: underline
  text-decoration-skip-ink: auto

img, picture, svg, video
  display: block
  max-width: 100%